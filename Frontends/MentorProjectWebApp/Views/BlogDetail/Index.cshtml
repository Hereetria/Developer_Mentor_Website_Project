
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/UILayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8">

            @await Component.InvokeAsync("_BlogDetailArticleComponentPartial", new { id = ViewBag.x })

            @await Component.InvokeAsync("_BlogDetailCommentsComponentPartial", new { id = ViewBag.x })

@await Component.InvokeAsync("_BlogDetailCommentFormComponentPartial")

</div>
        <div class="col-lg-4 sidebar">
            <section>
                <div class="widgets-container">

                    @await Component.InvokeAsync("_BlogSidebarSearchComponentPartial")

                    @await Component.InvokeAsync("_BlogSidebarCategoriesComponentPartial")

                    @await Component.InvokeAsync("_BlogSidebarTagsComponentPartial")

                </div>
            </section>
        </div>
    </div>
</div>
