@model CreateArticleCommentDto

<section id="comment-form" class="comment-form section">
    <div class="container">

        <form action="" method="post">

            <h4>Post Comment</h4>
            <p>Your email address will not be published. Required fields are marked * </p>
            <div class="row">
                <div class="col-md-6 form-group">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Your Name*">
                </div>
                <div class="col-md-6 form-group">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Your Email*">
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <input asp-for="Website" type="text" class="form-control" placeholder="Your Website">
                </div>
            </div>
            <div class="row">
                <div class="col form-group">
                    <textarea asp-for="Content" class="form-control" placeholder="Your Comment*"></textarea>
                </div>
            </div>
            <input type="hidden" asp-for="ArticleDetailId" value="@ViewBag." />
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Post Comment</button>
            </div>

        </form>

    </div>
</section><!-- /Comment Form Section -->