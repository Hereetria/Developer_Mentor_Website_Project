@model ICollection<ResultMentorWithRelationsDto>;
    <section id="team" class="team section">

        <div class="container">

            <div class="row gy-4">

                
                    @foreach (var item in Model)
                    {
                        <a href="@($"/about/index/{item.MentorId}")">
                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="team-member d-flex align-items-start">
                            <div class="pic"><img src="@item.PhotoPath" class="img-fluid" alt=""></div>
                            <div class="member-info">
                            <h4>@item.Name</h4>
                            <span>@item.Title</span>
                            <p>@item.Brief</p>
                            <div class="social">
                                @foreach (var i in item.SocialMedias)
                                {
                                    <i class="bi @i.IconUrl"></i>
                                }

                            </div>
                            </div>
                        </div>
                        </div>
                        </a>
                    }
            </div>
        </div>

    </section>