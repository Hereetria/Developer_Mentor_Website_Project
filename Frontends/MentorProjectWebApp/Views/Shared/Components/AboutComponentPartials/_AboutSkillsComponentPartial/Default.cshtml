@model ICollection<ResultMentorSkillWithRelationsByIdDto>;

<section id="skills" class="skills section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Skills</h2>
        <p>Check Our Skills<br></p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row skills-content skills-animation">

            @foreach (var item in @Model)
            {
                <div class="col-lg-6">
                    <div class="progress">
                        <span class="skill">
                            <span>@item.Skill.Name</span>
                            <i class="val">@item.Rate%</i>
                        </span>
                        <div class="progress-bar-wrap">
                            <div class="progress-bar" role="progressbar" aria-valuenow="@item.Rate" aria-valuemin="0" aria-valuemax="100" style="width: @item.Rate%;"></div>
                        </div>
                    </div>
                </div>
            }


        </div>

    </div>

</section>